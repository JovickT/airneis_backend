<div>
    <h1 class="text-center" >Catégorie</h1>
     <table class="table" id="table-user">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ categorie.nom }}</td>
                    <td><button class="btn btn-primary">MODIFIER</button></td>
                    <td><button class="btn btn-danger">Supprimer</button></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="text-end user-plus">
        <button class="btn btn-primary">Ajouter une catégorie +</button>
    </div>
</div>