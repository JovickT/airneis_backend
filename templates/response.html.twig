{# templates/response.html.twig #}
{% extends 'layout.html.twig' %}

{% block content %}
<div class="container mt-5">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {{ form_start(form) }}
    <div class="card border-purple rounded">
        <div class="card-body">
            <div class="mb-3">
                {{ form_row(form.email, {
                    'attr': {'class': 'form-control', 'readonly': 'readonly'}
                }) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.message, {
                    'attr': {'class': 'form-control', 'rows': 8, 'readonly': 'readonly'}
                }) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.response, {
                    'attr': {'class': 'form-control', 'placeholder': 'Ã‰crivez ici...', 'rows': 3}
                }) }}
            </div>
            <div class="text-center">
                <input type="submit" value="Envoyer" class="btn btn-primary">
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>

<style>
.container {
    max-width: 800px;
    margin: 0 auto;
}

.border-purple {
    border: 1px solid purple;
}

.rounded {
    border-radius: 10px;
}

.card {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.p-3 {
    padding: 1rem;
}

.mt-5 {
    margin-top: 3rem;
}

.alert {
    margin-bottom: 1rem;
}
</style>
{% endblock %}
